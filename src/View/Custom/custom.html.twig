{% extends "layout.html.twig" %}

{% block stylesheet %}
	<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
	<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<link rel="stylesheet" href="../assets/css/footer_style.css">
	<link rel="stylesheet" href="../assets/css/_Custom.css">
{% endblock %}

{% block content %}

	<div class="form-custom">
		<form action="/Custom/saveConfig" method="POST" id="form-custom">

			<input class="custom" type="hidden" id="name_moto" name="moto" value="moto">

			<input class="custom" type="hidden" id="couleur_moto" name="couleur_moto" value="couleur_moto">

			<input class="custom" type="hidden" id="couleur_retro" name="couleur_retro" value="couleur_retro">

			<input class="custom" type="hidden" id="couleur_selle" name="couleur_selle" value="couleur_selle">

			<input class="custom" type="text" id="prix_moto" name="prix_moto" value="" readonly >

			<input class="custom" type="text" id="prix_retro" name="prix_retro" value="" readonly >

			<input class="custom" type="text" id="prix_selle" name="prix_selle" value="" readonly >

			<input type="submit" value="Enregister" class="custom">
		</form>
	</div>

	<div class="col-12 col-md-6 col-lg-6 col-sm-6 cont-img">
		<img src="../assets/Images/Jaune/moto-Y-B-B.jpg" id="image" class="img-responsive" alt="">
	</div>

	<div class="titre text-center">
		<h3 id="title">Choisissez votre moto</h3>
	</div>

	<div class="container col-3 col-lg-10">
		<div class="slider-01">
			<div class="img-div div1" onclick="imgMoto1()"></div>
			<div class="img-div div2" onclick="imgMoto2()"></div>
		</div>

		<div class="slider-1">
			<div class="img-div div1" onclick="imgFullBlue()"></div>
			<div class="img-div div2" onclick="imgFullGreen()"></div>
			<div class="img-div div3" onclick="imgFullRed()"></div>
			<div class="img-div div4" onclick="imgFullYellow()"></div>
		</div>

		<div class="slider-2">
			<div class="img-div div1" onclick="retroBlue()"></div>
			<div class="img-div div2" onclick="retroGreen()"></div>
			<div class="img-div div3" onclick="retroRed()"></div>
			<div class="img-div div4" onclick="retroYellow()"></div>
		</div>

		<div class="slider-3">
			<div class="img-div div1" onclick="selleBlue()"></div>
			<div class="img-div div2" onclick="selleGreen()"></div>
			<div class="img-div div3" onclick="selleRed()"></div>
			<div class="img-div div4" onclick="selleYellow()"></div>
		</div>
	</div>
{% endblock %}

{% block javascript %}

	<script src="https://code.jquery.com/jquery-3.0.0.js"></script>
	<script src="https://code.jquery.com/jquery-migrate-3.3.2.js"></script>
	<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
	<script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
	<script src="../assets/script/script.js"></script>

{% endblock %}
