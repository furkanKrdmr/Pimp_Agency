{% extends "layout.html.twig" %}

{% block stylesheet %}

	<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
	<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<link rel="stylesheet" href="../assets/css/footer_style.css">
	<link rel="stylesheet" href="../assets/css/_Custom.css">

{% endblock %}

{% block content %}

<div class="col-12 col-md-8 col-lg-8 col-sm-12 cont-img">
		<img src="../assets/Images/Jaune/moto-Y-B-B.jpg" id="image" class="img-responsive img-fluid w-100" alt="">
	</div>

	<div class="titre text-center">
		<h3 id="title">Choisissez votre couleur</h3>
	</div>

	<div class="container col-3 col-lg-10">
		<div class="slider-1">
			<div class="img-div div1" onclick=""></div>
			<div class="img-div div2" onclick="imgFullGreen()"></div>
			<div class="img-div div3" onclick="imgFullRed()"></div>
			<div class="img-div div4" onclick="imgFullYellow()"></div>
			<div class="img-div div5" onclick=""></div>
		</div>

		<div class="slider-2">
			<div class="img-div div1" onclick="imgYellowBlue()"></div>
			<div class="img-div div2"></div>
			<div class="img-div div3"></div>
			<div class="img-div div4"></div>
			<div class="img-div div5"></div>
		</div>

		<div class="slider-3">
			<div class="img-div div1"></div>
			<div class="img-div div2"></div>
			<div class="img-div div3"></div>
			<div class="img-div div4"></div>
			<div class="img-div div5"></div>
		</div>

		<div class="slider-4">
			<div class="img-div div1"></div>
			<div class="img-div div2"></div>
			<div class="img-div div3"></div>
			<div class="img-div div4"></div>
			<div class="img-div div5"></div>
		</div>
	</div>

<form action="" method="POST">

        <input type="hidden" id="name_moto" name="moto" value="moto">

        <input type="hidden" id="couleur_moto" name="couleur_moto" value="couleur_moto">

        <input type="hidden" id="couleur_retro" name="couleur_retro" value="couleur_retro">

        <input type="hidden" id="couleur_selle" name="couleur_selle" value="couleur_selle">

        <input type="hidden" id="prix_moto" name="prix_moto" value="prix_moto">

        <input type="hidden" id="prix_retroviseur" name="prix_retroviseur" value="prix_retroviseur">

        <input type="hidden" id="prix_selle" name="prix_selle" value="prix_selle">

        <input type="submit" value="Enregister">
    </form>

{% endblock %}

{% block javascript %}

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
	<script src="https://code.jquery.com/jquery-3.0.0.js"></script>
	<script src="https://code.jquery.com/jquery-migrate-3.3.2.js"></script>
	<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
	<script src="../assets/script/script.js"></script>

 {% endblock %}
